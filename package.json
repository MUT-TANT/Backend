{
  "name": "stacksave-backend",
  "version": "1.0.0",
  "description": "Backend API for StackSave - DeFi Savings Platform",
  "main": "dist/server.js",
  "scripts": {
    "build": "npx prisma generate && npx tsc",
    "start": "node dist/server.js",
    "dev": "nodemon --exec npx ts-node src/server.ts",
    "postinstall": "npx prisma generate",
    "check-contract": "npx ts-node src/scripts/checkContract.ts",
    "configure-vaults": "npx ts-node src/scripts/configureVaults.ts",
    "check-db": "npx ts-node src/scripts/checkDatabase.ts"
  },
  "dependencies": {
    "@prisma/client": "^6.19.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/node": "^24.10.0",
    "axios": "^1.13.2",
    "bull": "^4.16.5",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "ethers": "^6.15.0",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "morgan": "^1.10.1",
    "pg": "^8.16.3",
    "prisma": "^6.19.0",
    "redis": "^5.9.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "devDependencies": {
    "nodemon": "^3.1.10"
  }
}
